<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mke="http://maui.keyboard.effects/eightbot/2099"
             x:Class="MauiKeyboardEffectsTestApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry
                Placeholder="Numeric Keyboard"
                mke:NumericKeyboardEffect.IsHorizontal="False">
                <Entry.Effects>
                    <mke:NumericKeyboardRoutingEffect/>
                </Entry.Effects>
            </Entry>

            <Entry
                Placeholder="Horizontal Numeric Keyboard"
                mke:NumericKeyboardEffect.IsHorizontal="True">
                <Entry.Effects>
                    <mke:NumericKeyboardRoutingEffect/>
                </Entry.Effects>
            </Entry>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
